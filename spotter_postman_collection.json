  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Signup",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"name\": \"Test User\",\n    \"email\": \"test@example.com\",\n    \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/signup/",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "signup",
                ""
              ]
            },
            "description": "Create a new user account"
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// Auto-save the token if signup is successful",
                  "const responseJson = pm.response.json();",
                  "if (pm.response.code === 201 && responseJson.token) {",
                  "    pm.environment.set(\"auth_token\", responseJson.token);",
                  "    console.log(\"Token saved from signup response\");",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Login",
